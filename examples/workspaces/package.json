{
  "name": "example-workspaces",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "storybook": "yarn workspace example-workspaces-catalog run storybook --port 6010",
    "build-storybook": "yarn workspace example-workspaces-catalog run build-storybook",
    "preview-storybook": "http-server packages/catalog/storybook-static --port 6010 --silent",
    "test": "wait-on tcp:6010 && test-storybook --stories-json --url 'http://localhost:6010' --config-dir packages/catalog/.storybook",
    "test-ci": "run-p --race test preview-storybook"
  },
  "author": "",
  "license": "MIT",
  "workspaces": [
    "packages/app",
    "packages/catalog"
  ],
  "devDependencies": {
    "@storybook/test-runner": "0.0.8-canary.0b166f8.0",
    "http-server": "^14.1.0",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "wait-on": "^6.0.1"
  }
}
